Inference:
  command: bash inference.sh
  parameters:
    -input:
      flag: -input
      type: file
      required: true
    -image_size:
      flag: -image_size
      type: int
      default: 1024
    -median_filter:
      flag: -median_filter
      type: int
      default: 3
    -cudnn_benchmark:
      flag: -cudnn_benchmark
      type: install
      default: 0
      min: 0
      max: 1
Train:
  command: bash train.sh
  parameters:
    -style_image:
      flag: -style_image
      type: file
      required: true
    -style_image_size:
      flag: -style_image_size
      type: int
      default: 256
    -style_weights:
      flag: -style_weights
      type: float
      default: 5.0
    -content_weights:
      flag: -content_weights
      type: float
      default: 1.0
    -tv_strength:
      flag: -tv_strength
      type: float
      default: 1e-6
    -num_iterations:
      flag: -num_iterations
      type: int
      default: 40000
    -checkpoint_every:
      flag: -checkpoint_every
      type: int
      default: 1000
